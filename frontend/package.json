{
    "name": "frontend",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "lint": "semistandard --verbose src/js/**/*.mjs | snazzy && lesshint --reporter lesshint-reporter-stylish src/css",
        "format": "semistandard --verbose --fix src/js/**/*.mjs | snazzy",
        "build": "npm run debug && npm run minify",
        "debug": "mkdir -p build && npm run build:html && npm run build:css && npm run build:js",
        "build:html": "cp src/app.html build/index.html",
        "build:css": "postcss src/css/tailwind.pcss -o build/tailwind.generated.css && lessc src/css/main.less build/bundle.css",
        "build:js": "npm run generateRouteMetadata && esbuild src/js/app.mjs --log-level=warning --bundle --outfile=build/bundle.js",
        "minify": "npm run minify:css && npm run minify:js",
        "minify:css": "lessc --clean-css build/main.css build/main.css",
        "minify:js": "terser build/bundle.js --compress --mangle --comments=false -o build/bundle.js",
        "generateRouteMetadata": "node tools/generateRouteMetadata.mjs && (semistandard --fix src/generated/*.mjs > /dev/null || true)"
    },
    "keywords": [],
    "author": {
        "name": "Moritz Hein",
        "email": "mrhn0410@hochschule-trier.de",
        "url": "https://moritz.website"
    },
    "license": "MIT",
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.8",
        "@types/luxon": "^3.1.0",
        "autoprefixer": "^10.4.13",
        "daisyui": "^2.46.0",
        "esbuild": "^0.16.3",
        "less": "^4.1.3",
        "less-plugin-clean-css": "^1.5.1",
        "lesshint": "^6.3.7",
        "lesshint-reporter-stylish": "^3.0.0",
        "postcss": "^8.4.20",
        "postcss-cli": "^10.1.0",
        "postcss-import": "^15.1.0",
        "postcss-less": "^6.0.0",
        "semistandard": "^16.0.1",
        "snazzy": "^9.0.0",
        "tailwindcss": "^3.2.4",
        "terser": "^5.16.1"
    },
    "dependencies": {
        "auto-bind": "^5.0.1",
        "luxon": "^3.1.0"
    }
}
