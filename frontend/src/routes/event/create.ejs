<div class='w-full min-page-height flex justify-center items-center md:w-3/4 lg:w-1/2 xl:w-1/3 mx-auto'>
    <div class='w-full bg-base-100 rounded-box my-10 shadow'>
        <div class='rounded-t-box rounded-b page-header create-event-header px-8 pt-12 pb-4 h-full justify-end'>
            <h1 class='text-white drop-shadow-xl text-2xl font-bold'>Veranstaltung erstellen</h1>
        </div>
        <form id='createEventForm' class='p-8 pb-4 w-full'>
            <div class='form-control w-full mb-4'>
                <label class='label' for='nameInput'>
                    <span class='label-text'>Veranstaltungsname</span>
                </label>
                <input type='text' id='nameInput' name='name' placeholder='Was feierst du?'
                       class='input input-bordered w-full' required />
            </div>
            <div class='form-control w-full mb-4'>
                <label class='label' for='beginDateInput'>
                    <span class='label-text'>Veranstaltungsbeginn</span>
                </label>
                <input type='datetime-local' id='beginDateInput' name='beginDate'
                       placeholder='Wann beginnt die Veranstaltung?'
                       class='input input-bordered w-full' min='<%= DateTime.now().toISO({
                    suppressSeconds: true,
                    suppressMilliseconds: true,
                    includeOffset: false
                }).substring(0, 16) ;%>' max='<%= DateTime.now().plus({ year: 100 }).toISO({
                    suppressSeconds: true,
                    suppressMilliseconds: true,
                    includeOffset: false
                }).substring(0, 16) ;%>' required />
            </div>
            <hr class='my-8' />
            <h2 class='ml-1 mb-2 font-bold'>Sitzplan</h2>
            <div class='form-control w-full mb-4'>
                <label class='label' for='tableAmountInput'>
                    <span class='label-text'>Anzahl Tische</span>
                </label>
                <input type='number' id='tableAmountInput' name='tableAmount'
                       placeholder='Wie viele Tische stellst du auf?' min='1'
                       max='9999'
                       class='input input-bordered w-full' required />
            </div>
            <div class='form-control w-full mb-4'>
                <label class='label' for='tableSeatAmountInput'>
                    <span class='label-text'>Anzahl Sitzplätze pro Tisch</span>
                </label>
                <input type='number' id='tableSeatAmountInput' name='tableSeatAmount'
                       placeholder='Wie viele Sitzplätze sind an jedem Tisch?'
                       min='1' max='999'
                       class='input input-bordered w-full' required />
            </div>
            <label class='label' for='tableSeatAmountInput'>
                <span class='label-text'>Art der Bestuhlung</span>
            </label>
            <div class='form-control'>
                <label class='label cursor-pointer flex justify-start' for='seatingTypeOneSidedRadio'>
                    <input type='radio' name='seatingType' id='seatingTypeOneSidedRadio'
                           class='radio radio-sm radio-primary mr-2'
                           checked value='oneSided' />
                    <span class='label-text'>Einseitig</span>
                </label>
            </div>
            <div class='form-control mb-6'>
                <label class='label cursor-pointer flex justify-start' for='seatingTypeBothSidesRadio'>
                    <input type='radio' name='seatingType' id='seatingTypeBothSidesRadio'
                           class='radio radio-sm radio-primary mr-2'
                           value='bothSides' />
                    <span class='label-text'>Beidseitig</span>
                </label>
            </div>
            <div class='flex justify-end'>
                <input type='submit' value='Erstellen' class='btn btn-primary' />
            </div>
        </form>
    </div>
</div>
